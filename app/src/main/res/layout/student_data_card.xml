<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    tools:context=".Student_data"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/Student_CLick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#959292"
        app:cardCornerRadius="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/Date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dated:"
                    android:layout_marginRight="12dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/2/2019"
                    android:layout_marginRight="30dp"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/Manzil_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manzil"
                    android:layout_marginRight="12dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/Manzil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginRight="12dp"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/Sabaq_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabaq:"
                    android:layout_marginRight="12dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/Sabaq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 - 9"
                    android:layout_marginRight="55dp"
                    android:textAlignment="center"
                    android:textSize="21sp"
                    />
                <TextView
                    android:id="@+id/Sabqi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabqi"
                    android:layout_marginRight="12dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/Sabqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginRight="12dp"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>